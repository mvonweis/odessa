@article{Bourhis2005,
	Abstract = {Contrary to the "one-fits-all" approach used in the literature on
	how to sustain virtual communities of practice (VCoPs), this paper
	advocates that successful management practices should be contingent
	upon their basic characteristics. More specifically, this study of
	eight virtual communities of practice investigates how the actions
